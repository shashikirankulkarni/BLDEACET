<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fverification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/back7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:src="@drawable/close"
            android:tint="#000">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="CODE\nVERIFICATION"
            android:textColor="#000"
            android:textSize="35sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="110dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="OTP sent to"
            android:textColor="#000"
            android:textSize="20dp">

        </TextView>


        <TextView
            android:id="@+id/otp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp">

        </TextView>

        <com.chaos.view.PinView
            android:id="@+id/fpin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:lineColor="#000"
            android:itemBackground="#F3F3F3"
            android:inputType="number"
            android:cursorVisible="true"
            app:cursorColor="#000"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp">
        </com.chaos.view.PinView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background2"
            android:text="Verify Code"
            android:textColor="#000"
            android:onClick="fcallNextScreenFromOTP"
            android:layout_marginTop="90dp"></Button>






    </LinearLayout>


</ScrollView>